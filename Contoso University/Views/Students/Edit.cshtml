@model Contoso_University.Models.Entities.Student

<h3>Edit Student</h3>

@if (Model is null)
{
    <p>No student was found with this Id</p>
}

<form method="post">
    <div class="mt-2">
        <label class="form-label">Last Name</label>
        <input type='text' class="form-control" required asp-for="ID" readonly />
    </div>

    <div class="mt-2">
        <label class="form-label">Last Name</label>
        <input type='text' class="form-control" required asp-for="LastName" />
    </div>

    <div class="mt-2">
        <label class="form-label">First Name</label>
        <input type='text' class="form-control" required asp-for="FirstMidName" />
    </div>

    <div class="mt-2">
        <label class="form-label">Enrolllment Date</label>
        <input type="date" class="form-control" required asp-for="EnrollmentDate" />
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
