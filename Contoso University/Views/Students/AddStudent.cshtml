@model Contoso_University.Models.Entities.Student

<h3>Add Student</h3>
<hr />

<form method="post">
    <div class="mt-2">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input type='text' class="form-control" required asp-for="LastName" />
    </div>

    <div class="mt-2">
        <label asp-for="FirstMidName" class="form-label">First Name</label>
        <input type='text' class="form-control" required asp-for="FirstMidName" />
    </div>

    <div class="mt-2">
        <label asp-for="EnrollmentDate" class="form-label">Enrolllment Date</label>
        <input type="date" class="form-control" required asp-for="EnrollmentDate" />
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary" >Save</button>
    </div>
</form>

